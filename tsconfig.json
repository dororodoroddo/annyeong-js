{
    "include": [
        "src/index.ts",
        "src/test/index.ts"
    ],
    "exclude": [
        "node_modules",
        "node_modules/*"
    ],
    "compilerOptions": {
        "module": "es2015",
        "moduleResolution":"Node",
        "target": "es6",
        "rootDir": "src/",
        "declaration": true,
        "outDir": "dist/",
        "removeComments": true,
        "noImplicitAny": true
    }
}